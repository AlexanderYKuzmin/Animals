<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AnimalTypeEditText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/et_hint</item>
        <item name="android:textColorHint">@color/color_gray</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">20dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:background">@drawable/et_bgd</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="SettingsTabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/eralash</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="SettingsSearchTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/eralash</item>
        <item name="android:textSize">22dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>
</resources>

