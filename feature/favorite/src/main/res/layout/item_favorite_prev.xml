<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_favorite_prev_one"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_margin="6dp"
        android:scaleType="centerCrop"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_favorite_prev_two"
        />
    <ImageView
        android:id="@+id/iv_favorite_prev_two"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_margin="6dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_favorite_prev_one"
        app:layout_constraintEnd_toStartOf="@id/iv_favorite_prev_three"
        />
    <ImageView
        android:id="@+id/iv_favorite_prev_three"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_margin="6dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_favorite_prev_two"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>